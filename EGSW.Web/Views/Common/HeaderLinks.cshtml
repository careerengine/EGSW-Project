@model EGSW.Web.Models.HeaderLinksModel
@using Microsoft.AspNet.Identity
@if (Model.IsAuthenticated)
{
   
    <ul class="nav navbar-nav navbar-right">
       
        @if (!Model.DisplayAdminLink)
        {
            <li>
                <a href="@Url.RouteUrl("CustomerInfo")">@("Hello " + Model.CustomerEmailUsername + "!")</a>
            </li>

            <li>
                <a href="@Url.RouteUrl("CustomerInfo")">My Account</a>
            </li>
        }
        else
        {
            <li>
                <a href="#">@("Hello " + Model.CustomerEmailUsername + "!")</a>
            </li>
            
            
        }
        
        
        <li><a href="@Url.RouteUrl("LogOff")">Log off</a></li>
        @if (Model.DisplayAdminLink)
        {
            <li>@Html.ActionLink(Model.Text, "AgentOrderList", "GutterOrder", new { area = "Admin" }, null)</li>
        }
    </ul>

}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}

